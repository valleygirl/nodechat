/*
 * Import nib
 */
@import 'nib'

/*
 * Nib provides a CSS reset
 */
global-reset()
      
*
  margin: 0
  padding: 0
  box-sizing: border-box 
  
body 
  font: 13px Helvetica, Arial 
      
form 
  background: #e6e6e6
  padding: none
  position: fixed
  bottom: 0
  width: 100%
  height: 90%
  alignment-baseline: central
  text-align: center 
  border-top: 50px
  padding-top:50px
      
form button 
  width: 25%
  background: rgb(130, 224, 255)
  border: groove
  padding: 10px
  alignment-baseline: central
  margin-top: .5%
  margin-bottom: .5%
  display: inline-block
            
#fname 
  width: 50%
  background: rgb(230, 230, 230)
  border: groove
  padding: 10px 
  margin-right: none       

.center
  text-align: center
  font-weight: bold
  width: 100%
  font-style: italic 